<body>
  <section id="hero">
    <%- include("include/navbar",{landingPage:true}) %>
    <div class="container-fluid hero-section">
      <div class="row">
        <div class="col-lg-6" style="padding-right:10%;">
          <p class="secondary-text">Interactive Tutoring</p>
          <h1 class="mb-3" style="font-size:2em">Effective <br>Online Way</h1>
          <h3 class="mb-4">A flexible way to find tutors to help you with your study</h3>
          <button type="button" class="btn btn-dark hero-btn" onclick="location.href='/signup'">Start Learning &#8594;</button>
          <button type="button" class="btn btn-dark hero-btn" onclick="location.href='/signup?istutor=1'">Join as Tutor &#8594;</button>
        </div>
        <div class="col-lg-6 d-flex justify-content-center">
