<section id="login-background">

    <div class="row">
      <div class="left-form col-lg-6">
        <div class="brand-container ps-5">
          <a href="/" class="mb-5">&#8592; Back to landing page</a>
        </div>
        <div class="img-container text-light">
          <h1>Glad to have you back, buddy!</h1>
          <p>By signing in, you agree to our <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a></p>
        </div>
        <button type="button" class="btn btn-dark hero-btn ms-5" onclick="location.href='/signin'" style="width:15em;">Sign In As Learners</button>
      </div>
      <div class="right-form col-lg-6">
        <% if (loginFailed) { %>
        <div class="alert alert-danger" role="alert">
          Invalid Email or Password
        </div>
        <% } %>
        <h1 class="text-start mb-4">Sign In As Tutor</h1>
        <form action="/signin?istutor=1" method="post">
          <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" name="username" placeholder="Email">
            <label for="floatingInput">Email</label>
          </div>

          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Email" style="width:100%">
            <label for="password">Password</label>
          </div>


          <div class="d-flex justify-content-start">
            <div class="">
              <button type="button" class="btn" onclick="showPassword(this)"><i class="fas fa-eye-slash me-2" id="buttonShow" ></i><span id="passwordState">Show</span> Password</button>
            </div>
          </div>
          <div class=" center">
            <button type="submit" class=" btn btn-dark login-btn mb-3">SIGN IN</button>
            <a href="/signup?istutor=1">Create an Account</a>
          </div>

          <div class="d-flex justify-content-between">

          </div>
          <div class=" center">
          </div>
          <div class=" center">

          </div>
        </form>

      </div>
    </div>


</section>


<script type="text/javascript">
  function showPassword(x) {
    var inputForm = document.getElementById("password")
    $("#buttonShow").toggleClass("fa-eye");
    $("#buttonShow").toggleClass("fa-eye-slash");
    if (inputForm.type === "password") {
      inputForm.type = "text"
      $("#passwordState").html("Hide");
    } else {
      inputForm.type = "password"
      $("#passwordState").html("Show");
    }
  }
</script>
