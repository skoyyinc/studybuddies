<%- include("../include/navbar",{landingPage:false}) %>

<section id="search">
  <form class="mx-0 px-0 py-0 my-0" action="/" method="post">
    <div class="container-fluid search-section text-center">
      <h1 class="text-center text-light">What do you want to learn today? Find a Buddy now!</h1>
      <div class="searchbar-wrapper">
        <div class="row searchbar">
          <div class="col-lg-4 d-flex justify-content-between input-wrapper">
            <div class="input-box">
              <label for="subjectForm" class="search-label">I WANT TO STUDY</label>
              <input type="text" name="subject" value="<%=subq%>" id="subjectForm" placeholder="Select Subject" class="inline-input" readonly>
            </div>
            <div class="dropdown" style="padding-top:.5em;">
              <button class="btn select-btn" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" data-bs-offset="0,5">
                <i class="fas fa-chevron-down"></i>
              </button>
              <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" role="menu" aria-labelledby="dropdownMenu">
                <li><a href="#" class="dropdown-item subject-select">Mathematics</a></li>
                <li><a href="#" class="dropdown-item subject-select">Indonesian Language</a></li>
                <li><a href="#" class="dropdown-item subject-select">English</a></li>
                <li><a href="#" class="dropdown-item subject-select">Physics</a></li>
                <li><a href="#" class="dropdown-item subject-select">Chemistry</a></li>
                <li><a href="#" class="dropdown-item subject-select">Biology</a></li>
                <li><a href="#" class="dropdown-item subject-select">Accounting</a></li>
                <li><a href="#" class="dropdown-item subject-select">Geology</a></li>
                <li><a href="#" class="dropdown-item subject-select">History</a></li>
              </ul>
            </div>

          </div>
          <div class="col-lg-4 d-flex justify-content-between input-wrapper">
            <div class="input-box">
              <label for="dayForm" class="search-label">SELECT DAY</label>
              <input type="text" name="subject" id="dayForm" placeholder="Select Day" class="inline-input" value="<%=dayq%>" readonly>
            </div>
            <div class="dropdown" style="padding-top:.5em;">
              <button class="btn select-btn" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false" data-bs-offset="0,5">
                <i class="fas fa-chevron-down"></i>
              </button>
              <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" role="menu" aria-labelledby="dropdownMenu">
                <li><a href="#" class="dropdown-item day-select">Monday</a></li>
                <li><a href="#" class="dropdown-item day-select">Tuesday</a></li>
                <li><a href="#" class="dropdown-item day-select">Wednesday</a></li>
                <li><a href="#" class="dropdown-item day-select">Thursday</a></li>
                <li><a href="#" class="dropdown-item day-select">Friday</a></li>
                <li><a href="#" class="dropdown-item day-select">Saturday</a></li>
                <li><a href="#" class="dropdown-item day-select">Sunday</a></li>
              </ul>
            </div>
          </div>
          <div class="col-lg-4 d-flex justify-content-between ">

            <form class="d-flex">
              <div class="input-group py-1">
                <input type="text" class="form-control me-1" placeholder="Search by name" value="<%=nameq%>" aria-label="Recipient's username" aria-describedby="button-addon2" id="nameForm">
                <button class="btn btn-outline-primary" type="button" id="button-addon2"><i class="fas fa-search"></i></button>
              </div>
            </form>


          </div>
        </div>
        <div class="d-flex justify-content-start">
          <a href="/find" class="text-light ">Clear Filter</a>

        </div>
      </div>
    </div>
  </form>

</section>

<section id="result">
  <div class="container-fluid result-section">
    <h2 style="font-size:1.2em;"><%=result.length%> Buddies Available</h2>

    <div class="result-wrapper">
      <% for (let i in result) { %>
        <div class="row result-card " role="button" onclick="location.href='/tutor/view/<%=result[i].id%>'">
            <div class="col-3">
              <% if (result[i].thumb && result.thumb[i] === "") { %>
                <img src="/static/assets/user.png" alt="" class="result-img">
              <% } else if (result[i].thumb && result.thumb[i] != "") { %>
                <img src="<%=result[i].thumb%>" alt="" class="result-img">
              <% } else { %>
                <img src="/static/assets/user.png" alt="" class="result-img">
              <% } %>

            </div>
            <div class="col-9">
              <h3 class="mb-0"><%=result[i].fn%></h3>
              <p class="mb-1"><%=result[i].major%>, <%=result[i].school%> </p>
              <div class="card-desc">
                <p class="secondary-text" style="font-size:.8em;"><%=result[i].desc%></p>
              </div>
              <div class="card-subject">
                <div class="d-flex">
                  <p style="font-size:.8em;">Teaching</p>
                  <p style="font-size:.8em; margin-left:.3em;">:</p>
                  <% for (let n in result[i].class) { %>
                    <div class="chips" style="font-size:.8em;">
                      <%=result[i].class[n].subject%>
                    </div>
                    <% if (n === "2") { break }  %>
                  <% } %>

                </div>
              </div>

            </div>
        </div>
      <%}%>

    </div>
  </div>

</section>

<%- include("../include/footer") %>

<script type="text/javascript" src="/static/js/find.js">
</script>
