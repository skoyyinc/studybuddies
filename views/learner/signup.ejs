<section id="login-background">
    <div class="row">
      <div class="left-form col-lg-6">
        <div class="brand-container ps-5">
          <a href="/" class="mb-5">&#8592; Back to landing page</a>
        </div>
        <div class="img-container text-light">
          <h1>Welcome, let's become buddies forever!</h1>
          <p>By signing up, you agree to our <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a></p>
        </div>
        <button type="button" class="btn btn-dark hero-btn ms-5" onclick="location.href='/signin?istutor=1'">Sign In As Tutor</button>
      </div>
      <div class="right-form col-lg-6">
        <% if (loginFailed) { %>
        <div class="alert alert-danger" role="alert" id="alertMsg">
          An Error Occured
        </div>
        <% } %>
        <div class="alert alert-danger visually-hidden" role="alert" id="alertMsg">
          An Error Occured
        </div>
        <h1 class="text-start mb-4">Sign Up</h1>
        <form action="/signup" method="post" id="signupForm">


          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="nameForm" name="name" placeholder="Email">
            <label for="floatingInput">Full Name</label>
          </div>
          <div class="form-floating mb-3">
            <input type="email" class="form-control" id="emailForm" name="username" placeholder="Email">
            <label for="emailForm">Email</label>
          </div>

          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="schoolForm" name="school" placeholder="Email">
            <label for="schoolForm">School</label>
            <div class="ms-3 mt-1">
              <p class="secondary-text" style="margin:0;font-size:.8em;">(ex: "SMA 34 JAKARTA")</p>
            </div>
          </div>

          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Email" style="width:100%">
            <label for="password">Password</label>
          </div>

          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="conPassword" name="conpwd" placeholder="Email" style="width:100%">
            <label for="conPassword">Confirm Password</label>
          </div>


          <div class="d-flex justify-content-start">
            <div class="">
              <button type="button" class="btn" onclick="showPassword(this)"><i class="fas fa-eye-slash me-2" id="buttonShow" ></i><span id="passwordState">Show</span> Password</button>
            </div>
          </div>
          <div class=" center">
            <button type="button" class=" btn btn-dark  login-btn mb-3" id="signupButton">SIGN UP</button>
            <a href="/signin">I Already Have An Account</a>
          </div>
          <div class="d-flex justify-content-between">
            <div class="line "></div>
            <small class="or">or</small>
            <div class="line "></div>
          </div>
          <div class=" center">
            <button type="button" class=" btn btn-dark login-btn" onclick="location.href='auth/google';"><i class="fab fa-google"></i> CONTINUE WITH GOOGLE</button>
          </div>
          <div class=" center">

          </div>
        </form>

      </div>
    </div>


</section>

<script type="text/javascript" src="/static/js/validator.js">

</script>
<script type="text/javascript">
  function showPassword(x) {
    var inputForm = document.getElementById("conPassword")
    $("#buttonShow").toggleClass("fa-eye");
    $("#buttonShow").toggleClass("fa-eye-slash");
    if (inputForm.type === "password") {
      inputForm.type = "text"
      $("#passwordState").html("Hide");
    } else {
      inputForm.type = "password"
      $("#passwordState").html("Show");
    }
  }
</script>
